{
    "compilerOptions": {
	    "module": "commonjs",
        "declaration": false,
        "jsx": "react",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "built",
        "strictNullChecks": true,
        "target": "es5",
        "lib": ["dom", "es6", "es7", "es2015"],
        "experimentalDecorators": true
    },

    "exclude": ["node_modules", "test", "built", "lib"]
}
