{
  "name": "metatonic-react-redux",
  "version": "0.0.4",
  "description": "Dynamic Data Entry Framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/beattyml1/metatonic-platform",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "cover": "tsc && jest --coverage",
    "ci": "tsc && jest --coverage --coverageDirectory=\"../coverage\"",
    "test": "tsc && jest"
  },
  "dependencies": {
    "core-js": "^2.5.5",
    "metatonic-core": "*",
    "metatonic-react": "*",
    "metatonic-redux": "*",
    "moment": "^2.22.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "@types/react": "^16.3.13",
    "@types/react-redux": "^5.0.19",
    "@types/redux": "^3.6.31",
    "tsd": "^0.6.5"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.46",
    "@types/jest": "^19.2.4",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "express": "~>4.15.2",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "mocha": "^4.1.0",
    "react-addons-test-utils": "*",
    "react-dom": "^16.2.0",
    "ts-jest": "21.2.4",
    "ts-node": "^4.1.0",
    "typescript": "~>2.4.1",
    "xhr-mock": "^2.3.2"
  },
  "engines": {
    "node": ">=0.8.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/src/domain/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jestPreprocess.js"
    },
    "testMatch": [
      "**/test/*.test.(ts|tsx|js)"
    ]
  }
}
