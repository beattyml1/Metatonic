{
  "name": "metatonic",
  "version": "0.0.3",
  "description": "Dynamic Data Entry Framework",
  "main": "built/bin/index.js",
  "repository": "https://github.com/beattyml1/metatonic-platform",
  "license": "MIT",
  "scripts": {
    "build": "./build-all.sh",
    "cover": "./build-all.sh && jest --coverage",
    "ci": "./build-all.sh && jest --coverage --coverageDirectory=\"../coverage\"",
    "test": "./build-all.sh && jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "chalk": "^2.3.2",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "ts-jest": "21.2.4",
    "ts-node": "^4.1.0",
    "typescript": "~>2.8.3"
  },
  "engines": {
    "node": ">=0.8.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "metatonic-core/src/**.{ts,tsx}",
      "metatonic-react/src/**.{ts,tsx}",
      "!**/node_modules/**",
      "!**/src/domain/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jestPreprocess.js"
    },
    "testMatch": [
      "**/test/*.test.(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "built/bin",
      ".*/node_modules",
      ".*/built/bin"
    ]
  }
}
