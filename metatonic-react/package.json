{
  "name": "metatonic-react",
  "version": "0.0.8",
  "description": "Dynamic Data Entry Framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "tsc && jest",
    "cover": "tsc && jest --coverage"
  },
  "dependencies": {
    "@types/core-js": "^0.9.46",
    "@types/react": "^16.3.14",
    "core-js": "^2.5.6",
    "inversify": "~>4.3",
    "metatonic-core": "^0.0.8",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-modal-bootstrap": "~>1.1.1",
    "tsd": "^0.6.5"
  },
  "devDependencies": {
    "express": "~>4.15.2",
    "redux-thunk": "^2.2.0",
    "@types/jest": "^19.2.4",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.3.2",
    "ts-jest": "21.2.4",
    "ts-node": "^4.1.0",
    "typescript": "~>2.8.3"
  },
  "engines": {
    "node": ">=0.8.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/src/domain/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jestPreprocess.js"
    },
    "testMatch": [
      "**/test/*.test.(ts|tsx|js)"
    ]
  }
}
