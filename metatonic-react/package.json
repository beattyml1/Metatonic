{
  "name": "metatonic-react",
  "version": "0.0.4",
  "description": "Dynamic Data Entry Framework",
  "main": "built/bin/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "tsc & jest",
    "cover": "tsc & jest --coverage"
  },
  "dependencies": {
    "core-js": "^2.5.3",
    "inversify": "~>4.3",
    "metatonic-core": "^0.0.4",
    "react": "~>15.4.2",
    "react-dom": "~>15.4.2",
    "tsd": "^0.6.5",
    "react-modal-bootstrap":"~>1.1.1"
  },
  "devDependencies": {
    "@types/react": "*",
    "@types/jest": "^19.2.4",
    "@types/core-js": "^0.9.35",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "react-addons-test-utils": "*",
    "express": "~>4.15.2",
    "ts-jest": "21.2.4",
    "ts-node": "^4.1.0",
    "react-test-renderer": "~>15.4.2",
    "jest-react": "*",
    "typescript": "~>2.4.1"
  },
  "engines": {
    "node": ">=0.8.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/src/domain/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jestPreprocess.js"
    },
    "testMatch": [
      "**/test/*.test.(ts|tsx|js)"
    ]
  }
}
